<UserControl x:Class="AskMeNow.UI.Views.HighlightedDocumentViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:entities="clr-namespace:AskMeNow.Core.Entities;assembly=AskMeNow.Core"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    
    <UserControl.Resources>
        <!-- Highlight Styles -->
        <Style x:Key="FrequentlyReferencedHighlight" TargetType="Border">
            <Setter Property="Background" Value="#FEF3C7"/>
            <Setter Property="BorderBrush" Value="#F59E0B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock Text="Frequently Referenced" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Tooltip}"/>
                        </StackPanel>
                    </ToolTip>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HighRelevanceHighlight" TargetType="Border">
            <Setter Property="Background" Value="#DBEAFE"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock Text="High Relevance" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Tooltip}"/>
                        </StackPanel>
                    </ToolTip>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="RecentReferenceHighlight" TargetType="Border">
            <Setter Property="Background" Value="#F3E8FF"/>
            <Setter Property="BorderBrush" Value="#8B5CF6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock Text="Recent Reference" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Tooltip}"/>
                        </StackPanel>
                    </ToolTip>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="KeyConceptHighlight" TargetType="Border">
            <Setter Property="Background" Value="#ECFDF5"/>
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock Text="Key Concept" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Tooltip}"/>
                        </StackPanel>
                    </ToolTip>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Auto"
                  Padding="20">
        <StackPanel>
            <!-- Highlights Summary -->
            <Border Background="#F8FAFC" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸ“„ AI-Relevant Highlights" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#374151" 
                               Margin="0,0,0,8"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Background="#FEF3C7" 
                                BorderBrush="#F59E0B" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="6,2" 
                                Margin="0,0,8,0">
                            <TextBlock Text="Frequently Referenced" 
                                       FontSize="10" 
                                       Foreground="#92400E"/>
                        </Border>
                        <Border Background="#DBEAFE" 
                                BorderBrush="#3B82F6" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="6,2" 
                                Margin="0,0,8,0">
                            <TextBlock Text="High Relevance" 
                                       FontSize="10" 
                                       Foreground="#1E40AF"/>
                        </Border>
                        <Border Background="#F3E8FF" 
                                BorderBrush="#8B5CF6" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="6,2" 
                                Margin="0,0,8,0">
                            <TextBlock Text="Recent Reference" 
                                       FontSize="10" 
                                       Foreground="#6B21A8"/>
                        </Border>
                        <Border Background="#ECFDF5" 
                                BorderBrush="#10B981" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="6,2">
                            <TextBlock Text="Key Concept" 
                                       FontSize="10" 
                                       Foreground="#065F46"/>
                        </Border>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding Highlights.Count, StringFormat='{}{0} highlighted sections found'}" 
                               FontSize="12" 
                               Foreground="#6B7280"/>
                </StackPanel>
            </Border>

            <!-- Document Content with Highlights -->
            <Border Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20">
                <TextBlock x:Name="DocumentContentTextBlock"
                           FontSize="14" 
                           Foreground="#111827" 
                           TextWrapping="Wrap" 
                           LineHeight="24"
                           FontFamily="Segoe UI"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
