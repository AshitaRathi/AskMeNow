<Window x:Class="AskMeNow.UI.Views.DocumentPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:entities="clr-namespace:AskMeNow.Core.Entities;assembly=AskMeNow.Core"
        xmlns:views="clr-namespace:AskMeNow.UI.Views"
        mc:Ignorable="d"
        Title="Document Preview" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="700">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4F8CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B7CE8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E6BD6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Shadow Effect -->
        <Style x:Key="CardShadowStyle" TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                      Opacity="0.1" 
                                      ShadowDepth="2" 
                                      BlurRadius="8" 
                                      Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <Border Grid.Row="0" 
                Background="#FFFFFF" 
                CornerRadius="12" 
                Padding="24,20" 
                Margin="0,0,0,16"
                Style="{StaticResource CardShadowStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title and Metadata -->
                <StackPanel Grid.Column="0">
                    <!-- File Name Title -->
                    <TextBlock Text="{Binding FileName}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#1F2937" 
                               Margin="0,0,0,12"/>
                    
                    <!-- Metadata Row with Icons -->
                    <StackPanel Orientation="Horizontal">
                        <!-- File Type -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                            <TextBlock Text="ðŸ“„" 
                                       FontSize="14" 
                                       Margin="0,0,6,0" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding FileExtension, StringFormat='{}{0} file'}" 
                                       FontSize="13" 
                                       Foreground="#6B7280" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Word Count -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                            <TextBlock Text="ðŸ“Š" 
                                       FontSize="14" 
                                       Margin="0,0,6,0" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding WordCount, StringFormat='{}{0:N0} words'}" 
                                       FontSize="13" 
                                       Foreground="#6B7280" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Last Modified -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                            <TextBlock Text="ðŸ“…" 
                                       FontSize="14" 
                                       Margin="0,0,6,0" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding LastModified, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" 
                                       FontSize="13" 
                                       Foreground="#6B7280" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- File Size -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" 
                                       FontSize="14" 
                                       Margin="0,0,6,0" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding FileSizeBytes, StringFormat='{}{0:N0} bytes'}" 
                                       FontSize="13" 
                                       Foreground="#6B7280" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Top">
                    <!-- Copy Content Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Click="CopyContentButton_Click"
                            ToolTip="Copy content to clipboard"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" 
                                       FontSize="14" 
                                       Margin="0,0,4,0"/>
                            <TextBlock Text="Copy" 
                                       FontSize="12" 
                                       Foreground="#6B7280"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Close Button -->
                    <Button Style="{StaticResource IconButtonStyle}"
                            Click="CloseButton_Click"
                            ToolTip="Close preview">
                        <TextBlock Text="âœ•" 
                                   FontSize="16" 
                                   Foreground="#6B7280" 
                                   FontWeight="Bold"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Divider -->
        <Border Grid.Row="1" 
                Height="1" 
                Background="#E5E7EB" 
                Margin="0,0,0,16"/>

        <!-- Content Card -->
        <Border Grid.Row="2" 
                Background="#FFFFFF" 
                CornerRadius="12" 
                Padding="24"
                Style="{StaticResource CardShadowStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Content Header -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,16">
                    <TextBlock Text="ðŸ“" 
                               FontSize="16" 
                               Margin="0,0,8,0" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Document Content" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#374151" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Document Content -->
                <Border Grid.Row="1" 
                        Background="#FAFAFA"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto"
                                  Padding="20">
                        <TextBlock Text="{Binding Content}" 
                                   FontFamily="'Segoe UI', 'Cascadia Code', Consolas, monospace"
                                   FontSize="14" 
                                   Foreground="#1F2937" 
                                   TextWrapping="Wrap" 
                                   LineHeight="24"
                                   TextAlignment="Left"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>