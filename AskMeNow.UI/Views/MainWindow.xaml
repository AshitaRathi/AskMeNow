<Window x:Class="AskMeNow.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AskMeNow.UI.ViewModels"
        xmlns:entities="clr-namespace:AskMeNow.Core.Entities;assembly=AskMeNow.Core"
        xmlns:converters="clr-namespace:AskMeNow.UI.Converters"
        mc:Ignorable="d"
        Title="AskMeNow - AI Q/A Chat" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="800">
    
    <Window.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:RecordingLevelConverter x:Key="RecordingLevelConverter"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4F8CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B7AE8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E5FCC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#D1D5DB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D5DB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4F8CFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- User Message Template -->
        <DataTemplate x:Key="UserMessageTemplate" DataType="{x:Type entities:Message}">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="1" 
                        Background="#4F8CFF" 
                        CornerRadius="18,18,4,18" 
                        Padding="16,12" 
                        MaxWidth="450"
                        MinWidth="120"
                        HorizontalAlignment="Right">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                          Opacity="0.1" 
                                          BlurRadius="8" 
                                          ShadowDepth="2" 
                                          Direction="270"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding Text}" 
                                   Foreground="White" 
                                   TextWrapping="Wrap" 
                                   FontSize="14"
                                   LineHeight="20"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                                   Foreground="#E3F2FD" 
                                   FontSize="11" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- AI Message Template -->
        <DataTemplate x:Key="AIMessageTemplate" DataType="{x:Type entities:Message}">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- AI Avatar -->
                <Border Grid.Column="0" 
                        Width="40" 
                        Height="40" 
                        Margin="0,0,12,0" 
                        VerticalAlignment="Top">
                    <Border.Clip>
                        <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                    </Border.Clip>
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                          Opacity="0.1" 
                                          BlurRadius="4" 
                                          ShadowDepth="1" 
                                          Direction="270"/>
                    </Border.Effect>
                    <!-- AI Avatar with Blue Circle and White Text -->
                    <Grid>
                        <!-- Blue Circle Background -->
                        <Ellipse Width="40" 
                                 Height="40" 
                                 Fill="#4F8CFF" 
                                 Opacity="0.6"/>
                        
                        <!-- White "AI" Text -->
                        <TextBlock Text="AI" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Opacity" Value="1.0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Opacity" Value="0.7"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <Border Grid.Column="1" 
                        Background="#FFFFFF" 
                        CornerRadius="18,18,18,4" 
                        Padding="16,12" 
                        MaxWidth="700"
                        MinWidth="150"
                        HorizontalAlignment="Left"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                          Opacity="0.1" 
                                          BlurRadius="8" 
                                          ShadowDepth="2" 
                                          Direction="270"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Regular message content -->
                        <TextBlock Text="{Binding Text}" 
                                   Foreground="#111827" 
                                   TextWrapping="Wrap" 
                                   FontSize="14"
                                   LineHeight="20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Thinking indicator -->
                        <TextBlock Text="Thinking..." 
                                   Foreground="#6B7280" 
                                   FontSize="14"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Left"
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                                   Foreground="#6B7280" 
                                   FontSize="11" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>


        <!-- Message Template Selector -->
        <Style x:Key="MessageTemplateSelector" TargetType="ContentPresenter">
            <Setter Property="ContentTemplate" Value="{StaticResource AIMessageTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Sender}" Value="{x:Static entities:MessageSender.User}">
                    <Setter Property="ContentTemplate" Value="{StaticResource UserMessageTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" 
                Background="#F8FAFC" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- App Logo and Title -->
                <StackPanel Grid.Row="0" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="20,20,20,20">
                    <Ellipse Width="32" Height="32" 
                            Fill="#4F8CFF" 
                            Margin="0,0,12,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#4F8CFF" 
                                            Opacity="0.3" 
                                            BlurRadius="8" 
                                            ShadowDepth="2"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AskMeNow" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#1F2937"/>
                        <TextBlock Text="AI Q/A Assistant" 
                                   FontSize="12" 
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Row="1" 
                           Text="{Binding StatusMessage}" 
                           FontSize="12" 
                           Foreground="#6B7280" 
                           HorizontalAlignment="Center" 
                           Margin="20,0,20,20"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <!-- Documents List -->
                <ScrollViewer Grid.Row="2" 
                             VerticalScrollBarVisibility="Auto" 
                             Margin="20,0,20,20">
                    <StackPanel>
                        <TextBlock Text="Loaded Documents" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#374151" 
                                   Margin="0,0,0,12"/>
                        
                        <ItemsControl ItemsSource="{Binding LoadedDocuments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                           CornerRadius="8" 
                                           Padding="12,8" 
                                           Margin="0,0,0,8"
                                           BorderBrush="#E5E7EB" 
                                           BorderThickness="1">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#000000" 
                                                            Opacity="0.05" 
                                                            BlurRadius="4" 
                                                            ShadowDepth="1"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- File Type Icon -->
                                            <Ellipse Grid.Column="0" 
                                                    Width="24" Height="24" 
                                                    Margin="0,0,12,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#6B7280"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".pdf">
                                                                <Setter Property="Fill" Value="#DC2626"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".docx">
                                                                <Setter Property="Fill" Value="#2563EB"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".doc">
                                                                <Setter Property="Fill" Value="#2563EB"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".xlsx">
                                                                <Setter Property="Fill" Value="#059669"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".xls">
                                                                <Setter Property="Fill" Value="#059669"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".txt">
                                                                <Setter Property="Fill" Value="#6B7280"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".md">
                                                                <Setter Property="Fill" Value="#7C3AED"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".json">
                                                                <Setter Property="Fill" Value="#D97706"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FileExtension}" Value=".html">
                                                                <Setter Property="Fill" Value="#EA580C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            
                                            <!-- File Info -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Title}" 
                                                           FontSize="12" 
                                                           FontWeight="Medium" 
                                                           Foreground="#111827" 
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding FileExtension, StringFormat='{}{0} file'}" 
                                                           FontSize="10" 
                                                           Foreground="#6B7280" 
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding WordCount, StringFormat='{}{0} words'}" 
                                                           FontSize="10" 
                                                           Foreground="#6B7280"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main Chat Area -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Header -->
            <TextBlock Grid.Row="0" 
                       Text="Chat with AI Assistant" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#1F2937" 
                       Margin="0,0,0,20"/>

            <!-- Chat Messages -->
            <Border Grid.Row="1" 
                    Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Margin="0,0,0,20">
                <ScrollViewer x:Name="ChatScrollViewer" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="20,20,20,20">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}" Style="{StaticResource MessageTemplateSelector}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Input Area - Auto-resizing TextBox with MinHeight 60px, MaxHeight 200px -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding UserQuestion, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         MinHeight="60"
                         MaxHeight="200"
                         VerticalAlignment="Top"
                         FontSize="14"
                         Margin="0,0,10,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding EnterKeyCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                
                <!-- Voice Recording Button -->
                <Button Grid.Column="1" 
                        Command="{Binding VoiceAskCommand}"
                        Width="60"
                        MinHeight="60"
                        VerticalAlignment="Top"
                        Margin="0,0,10,0"
                        ToolTip="Voice Ask - Click to record your question">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                            <Setter Property="Background" Value="#10B981"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                    <Setter Property="Background" Value="#EF4444"/>
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="â¹" FontSize="16" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsVoiceEnabled}" Value="False">
                                    <Setter Property="Background" Value="#D1D5DB"/>
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ¤" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                
                <!-- Mute/Unmute Button -->
                <Button Grid.Column="2" 
                        Command="{Binding ToggleMuteCommand}"
                        Width="60"
                        MinHeight="60"
                        VerticalAlignment="Top"
                        Margin="0,0,10,0"
                        ToolTip="Toggle AI Voice Response">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                            <Setter Property="Background" Value="#6B7280"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                    <Setter Property="Background" Value="#EF4444"/>
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ”‡" FontSize="16" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”Š" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                
                <Button Grid.Column="3" 
                        Content="Send" 
                        Command="{Binding AskCommand}"
                        Style="{StaticResource ModernButton}"
                        Width="100"
                        MinHeight="60"
                        VerticalAlignment="Top"/>
            </Grid>

            <!-- Recording Level Indicator -->
            <Border Grid.Row="3" 
                    Background="#FEF3C7" 
                    BorderBrush="#F59E0B" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="12,8" 
                    Margin="0,0,0,20"
                    Visibility="{Binding IsRecording, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸŽ¤ Recording..." 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#92400E" 
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <Border Background="#F3F4F6" 
                            BorderBrush="#D1D5DB" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Width="200" 
                            Height="8"
                            VerticalAlignment="Center">
                        <Border Background="#10B981" 
                                CornerRadius="3" 
                                HorizontalAlignment="Left"
                                Width="{Binding RecordingLevel, Converter={StaticResource RecordingLevelConverter}}"/>
                    </Border>
                    <TextBlock Text="{Binding RecordingLevel, StringFormat='{}{0:P0}'}" 
                               FontSize="12" 
                               Foreground="#6B7280" 
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Export Button -->
            <Button Grid.Row="4" 
                    Content="ðŸ“„ Export Conversation" 
                    Command="{Binding ExportCommand}"
                    Style="{StaticResource SecondaryButton}"
                    HorizontalAlignment="Right"
                    Width="200"/>
        </Grid>
    </Grid>
</Window>