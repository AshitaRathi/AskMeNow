<Window x:Class="AskMeNow.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AskMeNow.UI.ViewModels"
        xmlns:entities="clr-namespace:AskMeNow.Core.Entities;assembly=AskMeNow.Core"
        mc:Ignorable="d"
        Title="AskMeNow - AI FAQ Chat" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="800">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4F8CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B7AE8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2E5FCC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#D1D5DB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D5DB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4F8CFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- User Message Template -->
        <DataTemplate x:Key="UserMessageTemplate" DataType="{x:Type entities:Message}">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="1" 
                        Background="#4F8CFF" 
                        CornerRadius="18,18,4,18" 
                        Padding="16,12" 
                        MaxWidth="400">
                    <StackPanel>
                        <TextBlock Text="{Binding Text}" 
                                   Foreground="White" 
                                   TextWrapping="Wrap" 
                                   FontSize="14"
                                   LineHeight="20"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                                   Foreground="#E3F2FD" 
                                   FontSize="11" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- AI Message Template -->
        <DataTemplate x:Key="AIMessageTemplate" DataType="{x:Type entities:Message}">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- AI Avatar -->
                <Ellipse Grid.Column="0" 
                         Width="32" 
                         Height="32" 
                         Fill="#E5E7EB" 
                         Margin="0,0,12,0" 
                         VerticalAlignment="Top">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="#E5E7EB"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Fill" Value="#4F8CFF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="18,18,18,4" 
                        Padding="16,12" 
                        MaxWidth="500"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{Binding Text}" 
                                   Foreground="#111827" 
                                   TextWrapping="Wrap" 
                                   FontSize="14"
                                   LineHeight="20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding Text}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Text" Value="Thinking..."/>
                                            <Setter Property="Foreground" Value="#6B7280"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                                   Foreground="#6B7280" 
                                   FontSize="11" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Message Template Selector -->
        <Style x:Key="MessageTemplateSelector" TargetType="ContentPresenter">
            <Setter Property="ContentTemplate" Value="{StaticResource AIMessageTemplate}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Sender}" Value="{x:Static entities:MessageSender.User}">
                    <Setter Property="ContentTemplate" Value="{StaticResource UserMessageTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="AskMeNow" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#111827" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="AI-Powered FAQ Chat Assistant" 
                       FontSize="16" 
                       Foreground="#6B7280" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Status Message -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="#6B7280"
                       VerticalAlignment="Center"
                       FontSize="14"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Chat Messages Area -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E5E7EB" 
                BorderThickness="1" 
                CornerRadius="12" 
                Margin="0,0,0,20">
            <ScrollViewer x:Name="ChatScrollViewer" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="20">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentPresenter Content="{Binding}" Style="{StaticResource MessageTemplateSelector}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Input Area -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     Text="{Binding UserQuestion, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource ModernTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Height="60"
                     FontSize="14"
                     Margin="0,0,10,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding EnterKeyCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            
            <Button Grid.Column="1" 
                    Content="Send" 
                    Command="{Binding AskCommand}"
                    Style="{StaticResource ModernButton}"
                    Width="100"
                    Height="60"/>
        </Grid>

        <!-- Export Button -->
        <Button Grid.Row="4" 
                Content="📄 Export Conversation" 
                Command="{Binding ExportCommand}"
                Style="{StaticResource SecondaryButton}"
                HorizontalAlignment="Right"
                Width="200"/>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="5" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Processing..." 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4" 
                             Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>